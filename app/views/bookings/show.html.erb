<div class="row">
  <div class="col-md-12">

    <h2> 订单明细 </h2>

    <table class="table table-bordered">
      <thead>
        <tr>
          <th width="80%">商品明细</th>
          <th>单价</th>
        </tr>
      </thead>
      <tbody>


          <tr>
            <td>
              <%= @product.title %>
            </td>
            <td>
              <%= @product.price %>
            </td>
          </tr>

      </tbody>
    </table>

    <div class="total clearfix">
      <span class="pull-right">
        总计 <%= @booking.buy_quantity * @product.price %> CNY
      </span>
    </div>

     <hr>

     <h2> 寄送资讯 </h2>

     <table class="table table-striped table-bordered">
      <tbody>
        <tr>
          <td>
            订购人
          </td>
        </tr>
        <tr>
          <td>
            <%= @booking.billing_name %> - <%= @booking.billing_address %>
          </td>
        </tr>
        <tr>
          <td>
            收件人
          </td>
        </tr>
        <tr>
          <td>
            <%= @booking.shipping_name %> - <%= @booking.shipping_address %>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
