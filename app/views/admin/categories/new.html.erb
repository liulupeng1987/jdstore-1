<div class="container">
  <div class="row">
    <div class="col-md-8">
      <h2 class="text-center">新增分类</h2>
      <%= simple_form_for [:admin, @category] do |f| %>
        <div class="form-inputs">
          <%= f.input :name, label: "分类名称", autofocus: true %>
        </div>
        <div class="form-inputs">
          <table>
            <thead>
              <tr>
                <th>一级分类id</th>
                <th>一级分类名称</th>
              </tr>
            </thead>
            <tbody>
            <% @category_groups.each do |category_group| %>
              <tr>
                <td><%= category_group.id %></td>
                  <td><%= category_group.name %></td>
                  </tr>
                  <% end %>
            </tbody>
        </table>

          <%= f.input :category_group_id, label: "分类名称", autofocus: true %>
        </div>
        <div class="form-actions">
          <%= link_to("取消", :back, class: "btn btn-raised btn-white") %>
          <%= f.submit "保存", data: {disable_with: "正在保存..."}, class: "btn btn-raised btn-success" %>
        </div>
      <% end %>

    </div>
  </div>
</div>
